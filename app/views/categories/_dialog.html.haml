#dialog.modal.fade{ aria: { hidden: 'true', labelledby: 'myModalLabel' },
                    data: { backdrop: 'static', keyboard: 'true' },
                    role: 'dialog', tabindex: '1' }
  .modal-dialog.modal-lg.event-dialog
    .modal-content
      .modal-header
        %button.close{ aria: { label: 'Close' }, data: { dismiss: 'modal' }, type: 'button' }
          %span{ aria: { hidden: 'true' } } Ã—
        %h3.modal-title
          Create New Category
      .modal-body
        = form_for @category do |f|
          -if @category.errors.any?
            #error_explanation
              %h2= "#{pluralize(@category.errors.count, "error")} prohibited this category from being saved:"
              %ul
                - @category.errors.full_messages.each do |msg|
                  %li= msg

          .form-group
            = f.label :name
            = f.text_field :name, class: 'form-control', required: true
          .actions
            = f.submit 'Save', class: 'btn btn-default'

