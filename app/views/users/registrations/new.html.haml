.panel.panel-primary.authorization
  .panel-heading
    .panel-title.tip
      Sign up
  .panel-body
    .row
      .col-xs-12
        = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form-horizontal' }) do |f|
          = devise_error_messages!
          .form-group
            .col-sm-3.control-label
              = f.label :first_name
            .col-sm-8
              = f.text_field :first_name, autocomplete: 'off', class: 'form-control'
          .form-group
            .col-sm-3.control-label
              = f.label :last_name
            .col-sm-8
              = f.text_field :last_name, autocomplete: 'off', class: 'form-control'
          .form-group
            .col-sm-3.control-label
              = f.label :email
            .col-sm-8
              = f.email_field :email, autocomplete: 'off', class: 'form-control'
          .form-group
            .col-sm-3.control-label
              = f.label :password
            .col-sm-8
              = f.password_field :password, autocomplete: 'off', class: 'form-control'
          .form-group
            .col-sm-3.control-label
              = f.label :password_confirmation
            .col-sm-8
              = f.password_field :password_confirmation, autocomplete: 'off', class: 'form-control'
          %hr
          .form-group
            .col-sm-12
              = f.submit 'Sign up', class: 'btn btn-success'
        = render partial: 'devise/shared/links'
