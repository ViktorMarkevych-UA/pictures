!!!
%html
  %head
    %title Cool Chat
    = csrf_meta_tags
    %meta{content: 'width=device-width,initial-scale=1', name: 'viewport'}/
    %meta{charset: 'utf-8'}/
    %meta{content: 'IE=edge,chrome=1', 'http-equiv': 'X-UA-Compatible'}/

    = stylesheet_link_tag    'application', media: 'all'
    = javascript_include_tag 'application'
  %body
    %nav.navbar-inverse
      .container-fluid
        .navbar-header
          %button.navbar-toggle.collapsed{ aria: { expanded: 'false' }, data: { target: '#bs-navbar-collapse-1', toggle: 'collapse' }, type: 'button' }
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          = link_to 'Cool Chat', root_path, class: 'navbar-brand'
        #bs-navbar-collapse-1.collapse.navbar-collapse
          %ul.nav.navbar-nav
            %li
              = link_to '#', class: 'dropdown-toggle', aria: { expanded: 'false', haspopup: 'false' },
                             data: { toggle: 'dropdown' }, role: 'button' do
                Categories
                %span.caret
              %ul.dropdown-menu
                %li
                  = link_to categories_path do
                    %i.glyphicon.glyphicon-th-list
                    Categories List
                %li
                  = link_to new_category_path do
                    %i.glyphicon.glyphicon-folder-close
                    New Category
          %ul.nav.navbar-nav.navbar-right
            - if user_signed_in?
              %li= link_to current_user.full_name, user_path(current_user)
              %li= link_to 'Log out', destroy_user_session_path(current_user), method: :delete
            - else
              %li
                = link_to 'Sign up', new_user_registration_path
                = "or #{link_to 'Sign in', new_user_session_path}"
    .row{ style: 'padding-top: 60px;' }
    .flash-container
      -#= render 'share/flash_messages'
    .container-fluid
      .col-lg-1
      .col-lg-10
        = yield
      .col-lg-1
  %footer.navbar-fixed-bottom.text-center
    Copyright &copy; 2013 Cool Chat